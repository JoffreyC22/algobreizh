{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <div id="commande-content" class="" >
                <h1 class="text-center" >FACTURES</h1>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-7">
                    <ol class="breadcrumb">
                        <li><a href="home">Acceuil</a></li>
                        <li class="active">Factures</li>
                    </ol>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-5 text-right">
                    <a title="retour" href="home"><img class="arrow" src="assets/img/back57.png"></a>
                </div>
                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Vos factures</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="datatable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Montant TTC</th>
                                        <th>Facture détaillée</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for commande in commandes %} 
                                        <tr>
                                            <td>{{ commande.getCodeClient}}</td>
                                            <td>{{ commande.getMontant}} € <br /></td>
                                            <td>
                                                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal"><a href="detail-numero-{{ commande.getIdCommande }}">Voir le détail</a></button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Montant</th>
                                        <th>Facture détaillée</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}