{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <div id="produit-content" class="commande" >
                <h1 class="text-center" >PRODUITS</h1>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-7">
                    <ol class="breadcrumb">
                        <li><a href="#">Acceuil</a></li>
                        <li class="active">Produits</li>
                    </ol>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-5 text-right">
                    <a title="retour" href="#"><img class="arrow" src="assets/img/back57.png"></a>
                </div>
                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Differents produits</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="datatable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Libelle article</th>
                                        <th>Code article</th>
                                        <th>Prix </th>
                                        <th>Unite</th>
                                        <th>Panier</th>
                                    </tr>
                                </thead>
                                <tbody>
                                     {% for article in articles %} 
                                    <tr>
                                        <td><img src="assets/img/Produits/{{ article.getImage}}" alt="{{ article.getLibelleArticle}}"></td>
                                        <td>{{ article.getLibelleArticle}}</td>
                                        <td>{{ article.getCodeArticle}}</td>
                                        <td>{{ article.getPrix}} â‚¬ <br /><span class="help-block"><i> TVA : {{ article.getTVA}}</i></span></td>
                                        <td>{{ article.getUnite}}</td>
                                        <td ><a href="" class="btn btn-warning"><img title="ajouter au panier " class="btn-image" src="assets/img/shopping-small.png"> </a></td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Image</th>
                                        <th>Libelle article</th>
                                        <th>Code article</th>
                                        <th>Prix </th>
                                        <th>Unite</th>
                                        <th>Panier</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}