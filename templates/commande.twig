{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <div id="commande-content" class="" >
                <h1 class="text-center" >COMMANDES</h1>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-7">
                    <ol class="breadcrumb">
                        <li><a href="index.php">Acceuil</a></li>
                        <li class="active">Commandes</li>
                    </ol>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-5 text-right">
                    <a title="retour" href="index.php"><img class="arrow" src="assets/img/back57.png"></a>
                </div>
                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Vos commandes</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="datatable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Date de la commande</th>
                                        <th>Statut</th>
                                        <th>Montant</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for commande in commandes %} 
                                        <tr>
                                            <td>{{ commande.getCodeClient}}</td>
                                            <td>{{ commande.getDateCommande}}</td>
                                            <td>{{ (commande.getValide == "1") ? 'Validé' : 'En cours'  }}</td>
                                            <td>{{ commande.getMontant}} € <br /></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Date de la commande</th>
                                        <th>Statut</th>
                                        <th>Montant</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}