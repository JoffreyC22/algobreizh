{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <div id="produit-content" class="commande" >
                <h1 class="text-center" >INFORMATIONS</h1>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-7">
                    <ol class="breadcrumb">
                        <li><a href="index.php">Acceuil</a></li>
                        <li class="active">Informations</li>
                    </ol>
                </div>

                <div class="col-lg-12">
                    <div class="col-lg-12">
                        <p>Modifier vos informations</p>
                    </div>
                    <form role="form" method="POST" action="">
                        <div class="form-group col-lg-6">
                            <label for="email">Email address:</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ customer.getEmail }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email">Nom société:</label>
                            <input type="text" class="form-control" id="company" name="company" value="{{ customer.getNom }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email">Prenom dirgeant:</label>
                            <input type="text" class="form-control" id="prenom" name="prenom" value="{{ customer.getPrenom }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email ">ville:</label>
                            <input type="text" class="form-control" id="ville" name="ville" value="{{ customer.getVille }}">
                        </div> 
                        <div class="form-group col-lg-6">
                            <label for="email">Code postal:</label>
                            <input type="text" class="form-control" id="cp" name="cp" value="{{ customer.getCodePostal }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email">Adresse:</label>
                            <input type="text" class="form-control" id="adresse" name="adresse" value="{{ customer.getAdresse }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email">Telephone:</label>
                            <input type="text" class="form-control" id="telephone" name="telephone" value="{{ customer.getTelephone }}">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email">Mot de passe:</label>
                            <input type="text" class="form-control" id="mdp" name="mdp">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="email"> Confirmation mot de passe:</label>
                            <input type="text" class="form-control" id="mdp2" name="mdp2">
                            {%if error != "" %}<p class="alert alert-danger">{{ error }}</p>{% endif %}
                            
                        </div>
                        <div class="form-group col-lg-6">
                            
                            <span class=""> pas remplir les case mot de passe  si vous voulez pas changer des mot de passen </span>
                        </div>
                        <div class="form-group col-lg-12 text-center">
                            </br>
                            <a href="index.php" class="btn btn-default">RETOUR</a>

                            <button type="submit" class="btn btn-default" name="submit">VALIDER</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}