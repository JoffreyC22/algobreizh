{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <div id="commande-content" class="" >
                <h1 class="text-center" >COMMANDES EN VALIDE</h1>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-7">
                    <ol class="breadcrumb">
                        <li><a href="index-admin.php">Acceuil</a></li>
                        <li class="active">Commandes validées</li>
                    </ol>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-5 text-right">
                    <a title="retour" href="index-admin.php"><img class="arrow" src="../assets/img/back57.png"></a>
                </div>
                <div class="col-lg-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Commandes validees</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="datatable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Date de la commande</th>
                                        <th>Statut</th>
                                        <th>Détails</th>
                                        <th>Montant TTC</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for commande in commandeValide %} 
                                        <tr>
                                            <td>{{ commande.getCodeClient}}</td>
                                            <td>{{ commande.getDateCommande}}</td>
                                            <td>Est validée</td>
                                            <td><a href="detail-admin.php?id={{ commande.getIdCommande }}" class="btn btn-warning">Détails</a></td>
                                            <td>{{ commande.getMontant}} € <br /></td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Code client</th>
                                        <th>Date de la commande</th>
                                        <th>Statut</th>
                                        <th>Montant</th>
                                    </tr>
                                </tfoot>
                            </table>
                                
                        </div><!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}